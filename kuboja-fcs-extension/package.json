{
    "name": "kuboja-fcs",
    "displayName": "FemCad Script",
    "description": "Femcad Script for Visual Studio Code.",
    "author": "Kuboja",
    "license": "MIT",
    "version": "1.0.2",
    "publisher": "kuboja",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:fcs",
        "onCommand:kuboja-fcs.runLine"
    ],
    "main": "./out/src/extension",
    
    "contributes": {

        "languages": [
            {
                "id": "fcs",
                "aliases": [
                    "FemCAD Script",
                    "fcs"
                ],
                "extensions": [
                    ".fcs"
                ],
                "configuration": "./syntaxes/fcs-language-configuration.json"
            },
            {
                "id": "fcsmth",
                "aliases": [
                    "FemCAD Math Script",
                    "fcsmth"
                ],
                "extensions": [
                    ".fcsmth"
                ],
                "configuration": "./syntaxes/fcsmth-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fcs",
                "scopeName": "source.fcs",
                "path": "./syntaxes/fcs.tmLanguage.json"
            },
            {
                "language": "fcsmth",
                "scopeName": "source.fcsmth",
                "path": "./syntaxes/fcsmth.tmLanguage.json"
            }
        ],
        "commands":[
            {
                "command": "kuboja-fcs.runLine",
                "title": "Run current line",
                "description" : "Run command on current line"
            }
        ],
        "capabilities": {
            "documentSymbolProvider": "true"
        },
        "configuration": {
            "type": "object",
            "title": "Femcad Script Configurations",
            "properties": {
                "kuboja-fcs.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the extension's server."
                },
                "kuboja-fcs.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the kuboja-fcs service."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.4.1",
        "vscode": "^1.1.2",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.52",
        "@types/mocha": "^2.2.33"
    },
    "dependencies": {
        "vscode-languageclient": "^3.1.0"
    }
}